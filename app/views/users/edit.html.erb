<%= form_with model: @user do |f| %>
<div class="container">
<div class="low">

  <h1>User info</h1>
  <%= f.label :Name %><br>
  <%= f.text_field :name %>
</div>
<div>
  <div style="padding-top: 20px;">
  <%= f.label :profile_image %><br>
  <%= f.file_field :profile_image, accept: "image/*" %>
  </div>
</div>
<div>
  <div style="padding-top: 20px;">
  <%= f.label :introduction %><br>
  <%= f.text_field :introduction %>
  </div>
</div>
<div style="padding-top: 20px;">
<!--ボタンの上にスペース-->
  <button class="btn btn-secondary" type="submit" style="color: white; width: 150px">
  <%= link_to "Update User", '#', style: "color: white; text-decoration: none;" %>
 </div>
</button>
<% end %>
</div>
</div>
