<%= form_with model: @user do |f| %>

<div class="container">
<div class="low">
<div>
  <%= f.label :Name %><br>
  <%= f.text_field :name %>
</div>
<div>
  <%= f.label :image %><br>
  <%= f.file_field :image, accept: "image/*" %>
</div>
<div>
  <%= f.label :introduction %><br>
  <%= f.text_field :introduction %>
</div>
  <%= f.submit 'Update User' %>
<% end %>
</div>
</div>
