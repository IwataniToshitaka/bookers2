<% @users.each do |user| %>
  <% if user == current_user %>
    <div>
      <h2>User info</h2>
      <div>
        <%= image_tag user.get_profile_image(100, 100) %><br>
        <tbody>
          <tr>
            <th>name</th>
            <th><%= user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= user.introduction %></th>
          </tr>
        </tbody>
      </div>
    </div>
  <% end %>
<% end %>
<i>
  <%= link_to edit_user_path(current_user.id) do %>
  <i class="fas fa-user-cog"></i>
  <% end %>
</i>
