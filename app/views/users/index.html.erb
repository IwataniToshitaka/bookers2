  <div class="container">
  <div class="row">
  <div class="col-md-3 offset-md-1">

  <div>
    <h2>User info</h2>
  <div>
    <%= image_tag @user.get_profile_image(100,100) %><br/>
  </div>
    <table>
    <tbody>
      <tr>
        <th>name</th>
        <th><%= @user.name %></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th><%= @user.introduction %></th>
      </tr>
    </tbody>
    </table>


  <%= link_to edit_user_path(current_user.id), style:"width: 200px; background-color:white; border: 1px solid gray;", class:"btn btn-primary" do %>
  <i class="fas fa-user-cog" style="color: gray;"></i>
  <% end %>


    <h2 class="mt-3">New book</h2>
  <%= form_with model: Book.new do |f| %>
    <h4>Title</h4>
  <%= f.text_field :title %>
    <h4>Opinion</h4>
  <%= f.text_area :body %><br>


  <%= button_tag type: "submit",class: "btn btn-success",style: "color: white; width: 120px" do %>Create Book
<% end %>
<% end %>
  </div>
</div>

<div class="col-md-8">
  <h2>Users</h2>
    <table class="table table-hover table-inverse">
    <thead>
  <tr>
    <th>Image</th>
    <th>Name</th>
    <th></th>
    <th colspan="3"></th>
  </tr>
    </thead>
    <tbody>
    <% @users.each do |user| %>
  <tr>
    <td><%= image_tag user.get_profile_image(100,100) %></td>
    <td><%= user.name %></td>
    <td><%= link_to "Show", user_path(user) %></td>
    <!--その本のユーザIDに紐づくページに移行する-->
  </tr>
  <% end %>
    </tbody>
    </table>
  </div>
</div>