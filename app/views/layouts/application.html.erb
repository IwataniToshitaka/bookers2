<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

        <script src="https://kit.fontawesome.com/1084fc60d7.js" crossorigin="anonymous"></script>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

<body ap-style="">

    <header>
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container">
    <%= link_to "/", class: "navbar-brand" do %>
      <span>Bookers</span>
    <% end %>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
    <div class="collapse navbar-collapse" id="navbarNavDropdown">
      <ul class="navbar-nav ml-auto">
        <li>
        <% if user_signed_in? %>
          <%= link_to user_path(current_user.id), style: "color: white; text-decoration: none;" do %>
          <i class="fa-solid fa-home"></i>Home
          <% end %>
        </li>
        <li>
          <%= link_to users_path, style: "color: white; text-decoration: none;" do %>
          <i class="fa-solid fa-users"></i>Users
          <% end %>
        </li>
        <li>
          <%= link_to books_path(current_user.id), style: "color: white; text-decoration: none;" do %>
          <i class=".fa-solid fa-book-open"></i>Books
          <% end %>
        </li>
        <li>
          <%= link_to destroy_user_session_path, method: :delete, style: "color: white; text-decoration: none;" do %>
          <i class="fa-solid fa-sign-out-alt"></i>Log out
         <% end %>
        </li>


      <% else %>
        <li>
          <%= link_to root_path, style: "color: white; text-decoration: none;" do %>
          <i class="fa-solid fa-home"></i>
            Home
          <% end %>
        </li>
        <li>
          <%= link_to home_about_path, style: "color: white; text-decoration: none;" do %>
          <i class="fa-solid fa-link"></i>about
          <% end %>
        </li>
        <li>
          <%=link_to new_user_registration_path, style: "color: white; text-decoration: none;" do %>
          <i class="fa-solid fa-user-plus"></i>Sign up
          <% end %>
        </li>
        <li>
          <%=link_to new_user_session_path, style: "color: white; text-decoration: none;" do %>
          <i class="fa-solid fa-home"></i>Log in
          <% end %>
        </li>
        </ul>
      </div>
    </div>
  </nav>
  <% end %>
</header>
<%= yield %>






    <footer>
  <div class="container mt-5">
  	<div class="row">
    	<div class="mx-auto">
    		<p>CopyRight Infratop.inc</p>
    	</div>
    </div>
  </div>
</footer>



