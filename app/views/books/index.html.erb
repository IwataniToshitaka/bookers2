<div class="col-md-3 offset-md-1">
<div class="container">
<div class="row">

  <% if @book.errors.any? %>
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
  <% end %>


  <div>
    <h2>User info</h2>
  <div>
    <%= image_tag @user.get_profile_image(100,100) %>
  </div>
  <table>
    <tbody>
  <tr>
	  <th>name</th>
	  <th><%= @user.name %></th>
  </tr>
  <tr>
	  <th>introduction</th>
	  <th><%= @user.introduction %></th>
  </tr>
</tbody>
</table>


<% if current_user.id == @user.id %>
  <%= link_to edit_user_path(@user.id), style:"width: 200px; background-color:white; border: 1px solid gray;", class:"btn btn-primary" do %>
    <i class="fas fa-user-cog" style="color: gray;"></i>
  <% end %>
<% end %>

    <h2 class="mt-3">New book</h2>
  <%= form_with model: Book.new do |f| %>
    <h4>title</h4>
  <%= f.text_field :title %>
    <h4>opinion</h4>
  <%= f.text_area :body %><br/>

  <%= button_tag type: "submit",class: "btn btn-success",style: "color: white; width: 120px" do %>Create Book
<% end %>
<% end %>
</div>

  <div class="col-md-8 offset-md-1">
    <h2>Books</h2>
    <table class="table table-hover table-inverse">
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
  <tr>
  <% @books.each do |book| %>
  <td><%= link_to user_path(book.user_id) do %>
      <%= image_tag book.user.get_profile_image(100, 100) %>
      <% end %>
    <!--ブロック変数使ってるからこの中のuserはローカルでok-->
  </td>
	 <td><%= link_to book.title, book_path(book) %></td>
	 <td><%= book.body %></td>
  </tr>
  <% end %>
  </tbody>
  </table>
    </div>
  </div>
</div>


