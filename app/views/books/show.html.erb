<div class="col-md-8 offset-md-1">
  <div class="container">
  <div class="row">

  <div>
    <h2>User info</h2>
  <div>
    <%= image_tag @user.get_profile_image(100,100) %><br>
</div>
<table>
  <tbody>
  <tr>
    <th>name</th>
    <th><%= @user.name %></th><br>
  </tr>
  <tr>
    <th>introduction</th>
    <th><%= @user.introduction %></th>
  </tr>
</tbody>
</table>


<%= link_to edit_user_path(current_user.id), method: :get, class: "btn btn-primary" do %>
  <i class="fas fa-user-cog"></i>
  Edit User
<% end %>
    <h2 class="mt-3">New book</h2>
  <%= form_with model: Book.new do |f| %>
    <h4>Title</h4>
  <%= f.text_field :title %>
    <h4>Opinion</h4>
  <%= f.text_area :body %></br>

  <%= button_tag type: "submit",class: "btn btn-success",style: "color: white; width: 100px" do %>CreateBook
<% end %>
</div>

<div class="col-md-8 offset-md-1">
  <h2>Book detail</h2>
    <table class="table table-hover table-inverse">
    <thead></thead>
    <tbody>
  <tr>
    <td><%= image_tag @book.user.get_profile_image(100,100) %></td>
  	<td><%= link_to @book.title, book_path(@book) %></td>
  	<td><%= @book.body %></td>
 	  <td><%= link_to "Edit", edit_book_path(@book) %></td>
	  <td><%= link_to "Destroy", book_path(@book), method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
	  </tr>
	  <tr>
	   <td><%= link_to @book.user.name, user_path(@book.user) %></td>
    </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>

